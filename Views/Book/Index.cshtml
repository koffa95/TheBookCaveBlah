@model List<TheBookCave.Models.ViewModels.BookListViewModel>

@{
    ViewBag.Title = "All Books!";
}

<div id="allBooks">
    @foreach(var book in @Model)
    {
        <div class="inline">
            <div id="book-img">
                <img src="@book.image" alt="Book">
            </div>
            <p><a asp-area="" asp-controller="Book" asp-action="Index" asp-route-id="@book.bookId">@book.title</a></p>

            <span class="icon-input-btn"><span class="glyphicon glyphicon-shopping-cart"></span> <input type="submit" class="btn btn-default btn-lg cart" value="@book.bookId" id="cart"></span>

            <p><a asp-area="" asp-controller="Author" asp-action="Index" asp-route-id="@book.authorId">@book.author</a></p>
            <p>Price: @book.price ISK</p>
            <div class="shortDescription">
                <p>@book.shortDescription</p>
            </div>
        </div>
    }
</div>
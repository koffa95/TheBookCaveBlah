@model List<TheBookCave.Models.ViewModels.Topp10ViewModel>
@{
    ViewBag.class = "Topp10";
}
<div>
    @foreach(var topp10 in @Model)
    {
        <h2>@topp10.title</h2>
        <div id="image">
            <img src="@topp10.image" alt="Topp10">
        </div>
        <div>
            <p>Translator: @topp10.translator</p>
            <p>Original Language: @topp10.originalLanguage</p>
            <p>Language: @topp10.language</p>
            <p>Pages: @topp10.pages</p>
            <p>Price: @topp10.price</p>
            <div class="shortDescription">
                <p>Description:</p>
                <p>@author.shortDescription</p>
            </div>
        </div>
    }
</div>